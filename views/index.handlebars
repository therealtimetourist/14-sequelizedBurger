<div class ="row col-sm-12">
  <section class="col-sm-6 liner text-center">
    <h2>Ordered</h2>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="1">
              <button class="btn btn-primary alt-color" type="submit">EAT UP!</button>
            </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </section>
  <section class="col-sm-6 text-center">
    <h2>Eaten</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.id}}. {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </section>
</div>
  
<div class="row col-sm-12">
  <section class="col-sm-12 liner-top text-center">
    <h2>May I Take Your Order?</h2>

    <form class="create-update-form" action="/" method="POST">
      <fieldset class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <div class="input-group">
          <span id="addon_burger" class="input-group-addon">
            Burger Name
          </span>
          <input type="text" class="form-control" id="burger_name" name="burger_name" placeholder="Burger Name">
          <input type="hidden" name="devoured" value="0">
        </div>
      </fieldset>
      <button class="btn btn-primary alt-color" type="submit">
        Create Burger
      </button>
    </form>

  </section>
</div>